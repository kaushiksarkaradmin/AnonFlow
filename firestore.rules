rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Users can read their own profile.
    // Whitelisted users can read any user's profile.
    match /users/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || exists(/databases/$(database)/documents/allowedUsers/$(request.auth.token.email)));
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Whitelisted users can list all users to populate the UI.
    match /users/{userId} {
      allow list: if isSignedIn() && exists(/databases/$(database)/documents/allowedUsers/$(request.auth.token.email));
    }

    // Only whitelisted users can read or write posts
    match /posts/{postId} {
      allow read, create: if isSignedIn() && exists(/databases/$(database)/documents/allowedUsers/$(request.auth.token.email));
      
      // A user can update a post if they are the author, OR if they are only modifying the 'seenBy' field.
      allow update: if isSignedIn() 
                    && exists(/databases/$(database)/documents/allowedUsers/$(request.auth.token.email))
                    && (
                      resource.data.userId == request.auth.uid 
                      || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['seenBy']))
                    );

      // Users can only delete their own posts.
      allow delete: if isSignedIn() 
                    && exists(/databases/$(database)/documents/allowedUsers/$(request.auth.token.email)) 
                    && resource.data.userId == request.auth.uid;
    }
    
    // Management of the allowed users list.
    // This should be managed from the Firebase Console for security.
    // No client should have direct write access.
    match /allowedUsers/{email} {
      allow read, write: if false; 
    }
  }
}
