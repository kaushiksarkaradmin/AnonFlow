rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if the user's email is in the allowedUsers collection
    function isAllowedUser() {
      return exists(/databases/$(database)/documents/allowedUsers/$(request.auth.token.email));
    }

    // Users can read their own profile and admins can read any profile
    match /users/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isAllowedUser());
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Whitelisted users can read this collection to populate the UI
    match /users/{userId} {
      allow list: if isSignedIn() && isAllowedUser();
    }

    // Only whitelisted users can read or write posts
    match /posts/{postId} {
      allow read, create: if isSignedIn() && isAllowedUser();
      
      // Users can only update or delete their own posts
      allow update, delete: if isSignedIn() && isAllowedUser() && resource.data.userId == request.auth.uid;
    }
    
    // Allow whitelisted users to list the posts collection
    match /posts/{postId} {
        allow list: if isSignedIn() && isAllowedUser();
    }
    
    // Management of the allowed users list.
    // This should be managed from the Firebase Console for security.
    // No client should have direct write access.
    match /allowedUsers/{email} {
      allow read, write: if false; 
    }
  }
}
